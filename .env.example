# MHS Avatar Suite Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Hugging Face API (for open-source models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Database (if needed in future)
DATABASE_URL=your_database_url_here

# TTS Model Settings
DEFAULT_TTS_MODEL=microsoft/speecht5_tts
VOICE_CLONING_MODEL=coqui/XTTS-v2

# Avatar Settings
DEFAULT_AVATAR_MODEL=ready-player-me
AVATAR_ANIMATION_SPEED=1.0

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# OpenAI API (optional, for enhanced chat)
OPENAI_API_KEY=your_openai_api_key_here

# File Upload Settings
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
